<div id="members-index">
    <div class="member-index-title-area">
        <div class="title">Members</div>
        <div><%= link_to "Member登録", new_admin_member_path, class: "add-member-link" %></div>
    </div>
    <div class="word">Time Plannerとして同じ考えの元、ファイナンシャルプランナーオフィスのメンバーとして活動しています。</div>
    
    <section class="members-area">
      <% @members.each do |m| %> 
        <article>
            <div class="admin icon"><%= link_to edit_admin_member_path(m) do %><img src="<%= m.icon.present? ? "/image/members/#{m.icon}" : "/image/members/no-image.png" %>"><% end %></div>
            <div class="infomation">
                <div class="name-kanji"><%= m.last_name_kanji %><span class="last-name"><%= m.first_name_kanji %></span><span class="first-name-eng"><%= m.first_name %></span><span class="last-name-eng"><%= m.last_name %></span></div>
                <!--<div class="name-eng">Koki Aizen</div>-->
                <div class="title"><span><%= m.title %></span><span>｜</span><span><%= m.comment %></span></div>
                <div class="other-info">
                    <div class="zodiac"><div class="headline">干支</div><div><%= Member.zodiac_list.key(m.zodiac) %></div></div>
                    <div class="constellation"><div class="headline">星座</div><div><%= Member.constellation_list.key(m.constellation) %></div></div>
                    <div class="qualification"><div class="headline">資格</div><div><%= m.qualification %></div></div>
                    <div class="hobby"><div class="headline">趣味</div><div><%= m.hobby %></div></div>
                </div>
            </div>
        </article>      
    <% end %>
    </section>
  
</div>


