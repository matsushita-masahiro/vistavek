<div id="members-new">
<h3>Member　情報修正</h3>
  <%= form_with model: @member, url: admin_member_path(@member), method: :patch do |f| %>
      <table class="member-new">
        <tbody>
          <tr>
            <th scope="col">氏名<br>（漢字）</th>
            <td>性<%= f.text_field :last_name_kanji, class: "input_field" %></td>
            <td>名<%= f.text_field :first_name_kanji, class: "input_field" %></td>
          </tr>
           <tr>
            <th scope="col">氏名<br>（英語）</th>
            <td>last：<%= f.text_field :last_name, class: "input_field" %></td>
            <td>first：<%= f.text_field :first_name, class: "input_field" %></td>          
          </tr>
           <tr>
            <th scope="col">役職</th>
            <td colspan="2"><%= f.text_field :title, class: "input_field" %></td>
          </tr>
           <tr>
            <th scope="col">干支</th>
            <td colspan="2"><%= f.select :zodiac, Member.zodiac_list, { include_blank: '選択してください'}, { class: 'input_field-control' , required: true } %></td>
          </tr>
           <tr>
            <th scope="col">星座</th>
            <td colspan="2"><%= f.select :constellation, Member.constellation_list, { include_blank: '選択してください'}, { class: 'input_field-control' , required: true } %></td>
          </tr>
           <tr>
            <th scope="col">資格</th>
            <td colspan="2"><%= f.text_field :qualification, class: "input_field" %></td>
          </tr>
          <tr>
            <th scope="col">趣味</th>
            <td colspan="2"><%= f.text_field :hobby, class: "input_field" %></td>
          </tr>
          <tr>
            <th scope="col">一言</th>
            <td colspan="2"><%= f.text_field :comment, class: "input_field" %></td>
          </tr>
          <tr>
            <th scope="col">写真</th>
            <td colspan="2">
               <%= f.file_field :icon, accept: 'image/*', class: "input_field border-none" %>
               <img src="/image/members/<%= @member.icon %>" width="100" height="100">
            </td>
          </tr>
          <tr>
             <td colspan="3" class="td-last">
              <div class="submit-row"><%= f.submit "更新", class: "submit-btn" %></div>
             </td>
          </tr>
        </tbody>
      </table>
      
  <% end %>


<div class="member-delete">
   <%= form_with model: @member, url: "/admin/members/#{@member.id}", method: :delete do |g| %>
     <%= g.submit "データ削除", class: "member-delete-submit-button", data: { confirm: "【確認】アカウントを削除してもよろしいですか？" } %>
   <% end %>
</div>

</div>