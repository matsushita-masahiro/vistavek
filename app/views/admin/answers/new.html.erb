<div class="container">
<h3>お問合せへの回答</h3>

  <div class="field name">
    氏名<br />
    <p><%= @contact.name %></p>
  </div>

  <div class="field">
    メール<br />
    <p><%= @contact.email %></p>
  </div>
  
  <div class="field">
    お問合せ日時<br />
    <p><%= @contact.created_at.strftime("%Y/%m/%d %H:%M") %></p>
  </div>
    
  <div class="field">
    内容<br />
    <p><%= @contact.content %></p>
  </div>
  
 <%= form_with model: [@contact, @answer], url: admin_contact_answers_path(@contact) do |f| %>

      <%= f.hidden_field :contact_id, :value => @contact.id %>

      <div class="field name">
        <%= f.label :回答 %><br />
        <%= f.text_area :answer, :size => "20x10", required: true, :class => "form-control my-form", autocomplete: 'name' %>
      </div>
     
      <div class="actions">
        <%= f.submit "回答する", data: { confirm: "回答してOKですか？"}, class:"btn btn-primary" %>
      </div>
　<% end %>


</div>
